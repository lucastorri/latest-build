div.talk_form(style='margin-left:10px')
  form#form_talk(method='POST', action='/conference/'+conf_id+'/talk')
    input(type='hidden', name='conference[id]', value=conf_id)
    div.left
      p
        h4 title
        input(type='text', name='talk[title]')
      p
        h4 room
        input(type='text', name='talk[room]')
      p
        h4 tracks
        input#tracks(type='text', name='talk[tags]')
        div.tips
          i (hit tab to create a new one)
      div.clear

    div.left(style='margin-right:0')
      p
        h4 start
        input.start(type='text', name='talk[start]')
      p
        h4 end
        input.end(type='text', name='talk[end]')
      p
        h4 authors
        input#authors(type='text', name='talk[authors]')
        div.tips
          i (hit tab to create a new one)
      div.clear

    div.clear
